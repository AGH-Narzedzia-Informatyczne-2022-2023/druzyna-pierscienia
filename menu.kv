#:kivy 2.1

Manager:
    MenuScreen:
        name: "menu"
    ScoreboardScreen:
        name: "scoreboard"
    SettingsScreen: 
        name: "settings"

<MenuScreen>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "image/menu_background.jpg"

    BoxLayout:
        orientation: "vertical" 
        padding: "10dp"
        spacing: "10dp"
        size_hint: 0.5, 1
        pos_hint: {"center_x":0.27}
        Button:
            text: "Play!"
            font_size: 32
            on_press: main()
        Button:
            text: "Scoreboard"
            font_size: 32
            on_press: root.manager.current = "scoreboard"
        Button:
            text: "Settings"
            font_size: 32
            on_press: root.manager.current = "settings"
        Button:
            text: "Exit"
            font_size: 32
            on_press: exit()

<ScoreboardScreen>:
    BoxLayout:
        orientation: "vertical"
        
        Label:
            text: "Placeholder"
            font_size: 32

        Button:
            text: "Return"
            font_size: 32
            on_press: root.manager.current = "menu"

<SettingsScreen>:
    BoxLayout:
        orientation: "vertical"

        Label:
            text: "Placeholder"
            font_size: 32
        
        Button:
            text: "Return"
            font_size: 32
            on_press: root.manager.current = "menu"