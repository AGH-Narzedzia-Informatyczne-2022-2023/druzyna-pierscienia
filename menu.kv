#:kivy 2.1
Menu:

<Menu>:
    name: "menu"
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "image/background.png"

    MDCard:
        orientation: "vertical"
        padding: "5dp"
        pos_hint: {"center_x":.5, "center_y":.8}
        size_hint: .4, .25
        elevation: 3
        MDGridLayout:
            id: buttons_layout
            rows: 2
            spacing: "10dp"
            padding: "15dp"
            MDRaisedButton:
                text: "PLAY!"
                size_hint: 1, None
                font_size: 32
            MDRaisedButton:
                text: "QUIT"
                size_hint: 1, None
                font_size: 32
                on_release: exit()
